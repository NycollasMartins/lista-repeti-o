#include <stdio.h>

int main(){
	int numero, maior, menor;
	
	printf("Digite um numero inteiro: ");
	scanf("%d", &numero);
	
	maior = numero;
	menor = numero;
	
	while(numero >= 0){
		if(numero > maior)
			maior = numero;
		if(numero < menor)
			menor = numero;
		
		printf("Digite um numero inteiro: ");
		scanf("%d", &numero);
	}
	
	printf("Maior numero: %d\n", maior);
	printf("Menor numero: %d\n", menor);
	
	return 0;
}
